@import url('https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&family=DM+Serif+Display&display=swap');

/* reset */
*,
*::before,
*::after {
  box-sizing: border-box;
}

body,
h1,
h2,
h3,
p, 
section,
article {
  margin: 0;
  padding: 0;
}

img {
  max-width: 100%;
  display: block;
}

button {
  font-family: inherit;
}

body {
  min-height: 100vh;
  text-rendering: optimizeSpeed;
  line-height: 1.5;
}

html:focus-within {
  scroll-behavior: smooth;
}

a:not([class]) {
  text-decoration-skip-ink: auto;
}

@media (prefers-reduced-motion: reduce) {
  html:focus-within {
   scroll-behavior: auto;
  }
  
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}
/* end reset */

:root {
  --accent-100: rgb(27, 66, 97);
  --accent-200: rgba(0, 34, 62, 0.8);
  --accent-100b: rgba(248, 213, 173, 0.8);
  --accent-200b: rgba(252, 165, 128, 0.6);
  --warning: rgb(250, 128, 114);
  --padding: 1rem;
  --gap: 1rem;
}

body {
  font-family: 'DM Sans', sans-serif;
  font-size: 16px;
  background-image: url(<%= asset_path 'josiah-gardner-ksi5l4iJBjM-unsplash.jpg' %>);
  background-size: cover;
  padding: var(--gap);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--gap);
  color: var(--accent-200);
  position: relative;
}

a {
  text-decoration: none;
  color: inherit;
}

header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.logo {
  font-family: 'DM Serif Display', serif;
  font-size: 2rem;
  line-height: 1;
}

.header__links {
  display: flex;
  gap: var(--gap);
}

ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

h1 {
  text-transform: lowercase;
}

.greeting {
  display: flex;
  align-items: center;
  gap: var(--gap);
}

button {
  padding: 0.5rem var(--padding);
  border-radius: 15px;
  border: 2px solid var(--accent-100);
  background-color: transparent;
  letter-spacing: 1px;
  text-transform: uppercase;
}

button:hover, button:focus {
  cursor: pointer;
  background-color: var(--accent-100);
  color: var(--accent-100b);
}

.posts_index {
  display: flex;
  flex-direction: column;
  gap: var(--gap);
}

.post__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1 px solid black;
}

.post-title__wrapper {
  font-weight: 700;
  font-size: 1.2rem;
  display: flex;
  justify-content: space-between;
  border-bottom: 2px solid var(--accent-100b);
  padding-bottom: 0.5rem;
}

.posts {
  display: flex;
  flex-direction: column;
  gap: var(--gap);
}

.post__card, .no-posts {
  background-color: var(--accent-200);
  color: var(--accent-100b);
  border-radius: 15px;
  padding: var(--padding);
  width: clamp(300px, 50vw, 1000px);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  gap: var(--gap);
}

.form__wrapper {
  background-color: var(--accent-200);
  color: var(--accent-100b);
  border-radius: 15px;
  padding: var(--padding);
}

.form__wrapper textarea {
  outline: none;
  border: 2px solid var(--accent-100b);
  border-radius: 5px;
  background-color: transparent;
  padding: 0.2rem 0.5rem;
  height: 200px;
  width: clamp(300px, 50vw, 1000px);
  color: inherit;
}

.form__wrapper input[type=text], 
.form__wrapper input[type=email],
.form__wrapper input[type=password] {
  outline: none;
  padding: 0.2rem 0.5rem;
  border: 2px solid var(--accent-100b);
  border-radius: 5px;
  background-color: transparent;
  color: inherit;
}

input[type="submit"] {
  padding: 0.5rem var(--padding);
  border-radius: 15px;
  border: 2px solid var(--accent-100b);
  background-color: transparent;
  letter-spacing: 1px;
  text-transform: uppercase;
  color: var(--accent-100b);
}

input[type="submit"]:hover, input[type="submit"]:focus {
  cursor: pointer;
  background: linear-gradient(45deg, var(--accent-100b), var(--accent-200b));
  color: var(--accent-200);
}

.form__wrapper.post .err-message {
  color: salmon;
}

form {
  display: flex;
  flex-direction: column;
  gap: var(--gap);
}

input[type=checkbox] {
  accent-color: var(--accent-200b);
}

.error_explanation {
  font-size: 1rem;
  color: var(--warning);
}

.error_message {
  line-height: 1.2;
}

.field_with_errors {
  display: inline;
}

.post__new, .post__edit {
  display: flex;
  flex-direction: column;
  gap: var(--gap);
}

.post-show__wrapper {
  display: flex;
  flex-direction: column;
  gap: var(--gap);
}

.post__body {
  width: clamp(300px, 50vw, 1000px);
  border-radius: 15px;
  padding: var(--padding);
  background-color: var(--accent-200);
  color: var(--accent-100b);
}

.registration-edit {
  display: flex;
  flex-direction: column;
  gap: var(--gap);
}

.edit__section.cancel {
  background-color: var(--accent-200b);
  border-radius: 15px;
  padding: var(--padding);
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.photo-credit {
  color: var(--accent-100b);
  font-size: 0.8rem;
  position: absolute;
  bottom: 0;
}

@media only screen and (max-width: 350px) {
  header {
    flex-direction: column;
    align-items: start;
  }

  .header__links {
    justify-content: space-between;
    width: 100%;
  }
}